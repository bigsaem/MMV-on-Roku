<!-- node that renders Episodes Screen 
    handles bookmark buttons
    handles start of video playback
 -->
<component name="Episodes" extends="Group" initialFocus="RowList" >
    <interface>
        	        
        
        <!-- Episodes Content Node -->
        <field id="content" type="node" alias="RowList.content" onChange="onContentChange"/>
        
        <!-- Row item selection handler -->
        <field id="rowItemSelected" type="intarray" alwaysnotify="true" alias="RowList.rowItemSelected"/>
        
        <field id="showName" type="string"/>        
        <field id="seasonUrl" type="string"/>
        <field id="seasonCount" type="string"/>
        <field id="epUrl" type="string"/>
        
        <!-- Row item focused handler -->
        <field id="itemFocused" type="intarray" alias="RowList.rowItemFocused" onChange="OnItemFocused"/>

        <!-- Interface to focused item (Content Node) -->
        <field id="focusedContent"  type="node"/>
    </interface>
    
    <!-- main handler -->
    <script type="text/brightscript" uri="pkg:/components/screens/Episodes/Episodes.brs" />
    
    <children>
               
            
         <Poster
            id="Background"
            width = "1280"
            height = "720"
            loadSync = "true"
            uri = "pkg:/images/Background.png"
            /> 
         
       <Poster
            id = "itemMask"
            width = "1280"
            height = "400"
            loadSync = "true"
            translation = "[ 0, 350 ]"
            uri="pkg:/images/bg-tile.png"
            />
            
        <RowList
            id="RowList"
            focusBitmapUri="pkg:/images/focus_grid.9.png"
			translation="[0, 420]"
			itemSize="[1280, 218]"
			numRows="2"
			itemSpacing="[13, 0]"
			focusXOffset="[147]"
			rowFocusAnimationStyle="floatingFocus"
			rowItemSize="[[262, 147]]"
			rowItemSpacing="[[16.5, 3]]"
			showRowLabel="true"
			showRowCounter="false"
			rowLabelOffset="[[147, 20]]"
            />
            

        
        
        <Poster
			translation="[0, 650]"
            uri="pkg:/images/BG_dark_down.png"
            width="2000"
            height="95" />

          <Description
            id="Description"
			translation="[106, 372]"
            itemSpacings="[7,17]"/>
    </children>
</component>